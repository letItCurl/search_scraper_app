<% content_for :title, "Keywords uploads" %>

<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Keywords uploads</h1>
    <%= link_to "New keywords upload", new_keywords_upload_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <% if @keywords_uploads.any? %>
    <ul role="list" class="divide-y divide-gray-100">
      <% @keywords_uploads.each_with_index do |upload, index| %>
        <li class="flex items-center justify-between gap-x-6 py-5">
          <div class="min-w-0">
            <div class="flex items-start gap-x-3">
              <p class="text-sm/6 font-semibold text-gray-900"><%= upload.csv_file.filename %></p>
              <p class="mt-0.5 rounded-md bg-gray-50 px-1.5 py-0.5 text-xs font-medium whitespace-nowrap text-gray-600 ring-1 ring-gray-500/10 ring-inset"><%= upload.status %></p>
            </div>
            <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
              <p class="whitespace-nowrap">Uploaded on <time datetime="<%= upload.created_at.iso8601 %>"><%= upload.created_at.strftime("%B %d, %Y") %></time></p>
            </div>
          </div>
          <div class="flex flex-none items-center gap-x-4">
            <%= link_to "Show", upload, class: "hidden rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-xs ring-1 ring-gray-300 ring-inset hover:bg-gray-50 sm:block" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-center my-10 text-gray-500">No keywords uploads found.</p>
  <% end %>
</div>
