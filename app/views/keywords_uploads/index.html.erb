<% content_for :title, "Keywords uploads" %>

<div class="w-full">
  <% if @keywords_uploads.any? %>
    <div class="flex justify-between items-center mb-6">
      <div class="px-4 sm:px-0">
        <h3 class="text-2xl font-semibold text-gray-900">Upload a csv file</h3>
        <p class="mt-1 max-w-2xl text-sm/6 text-gray-500">List of CSV you uploaded recently</p>
      </div>

        <%= link_to "Add Bulk keyword upload", new_keywords_upload_path, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
    <ul role="list" class="divide-y divide-gray-100">
      <% @keywords_uploads.each_with_index do |upload, index| %>
        <li class="flex items-center justify-between gap-x-6 py-5">
          <div class="min-w-0">
            <div class="flex items-start gap-x-3">
              <p class="text-sm/6 font-semibold text-gray-900"><%= upload.csv_file.filename %></p>
              <p class="mt-0.5 rounded-md bg-gray-50 px-1.5 py-0.5 text-xs font-medium whitespace-nowrap text-gray-600 ring-1 ring-gray-500/10 ring-inset"><%= upload.status %></p>
            </div>
            <div class="mt-1 flex items-center gap-x-2 text-xs/5 text-gray-500">
              <p class="whitespace-nowrap">Uploaded on <time datetime="<%= upload.created_at.iso8601 %>"><%= upload.created_at.strftime("%B %d, %Y") %></time></p>
            </div>
          </div>
          <div class="flex flex-none items-center gap-x-4">
            <%= link_to upload, class: "flex items-center text-gray-400 hover:text-gray-700 hover:cursor-pointer hover:underline" do %>
              <span class="text-sm">Show</span>
              <svg class="size-5 flex-none text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
                <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd"></path>
              </svg>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <%= render "form", keywords_upload: current_user.keywords_uploads.new %>
  <% end %>
</div>
