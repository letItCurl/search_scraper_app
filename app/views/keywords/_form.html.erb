<%= form_with(model: keyword, class: "contents") do |form| %>
  <% if keyword.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul class="list-disc ml-6">
        <% keyword.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": keyword.errors[:name].none?, "border-red-400 focus:outline-red-600": keyword.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :total_ads %>
    <%= form.number_field :total_ads, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": keyword.errors[:total_ads].none?, "border-red-400 focus:outline-red-600": keyword.errors[:total_ads].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :total_links %>
    <%= form.number_field :total_links, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": keyword.errors[:total_links].none?, "border-red-400 focus:outline-red-600": keyword.errors[:total_links].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :html_cache %>
    <%= form.textarea :html_cache, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": keyword.errors[:html_cache].none?, "border-red-400 focus:outline-red-600": keyword.errors[:html_cache].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": keyword.errors[:user_id].none?, "border-red-400 focus:outline-red-600": keyword.errors[:user_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
